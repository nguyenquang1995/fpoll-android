<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="msgError"
            type="java.lang.String"/>

        <variable
            name="msgErrorEmail"
            type="java.lang.String"/>

        <variable
            name="fragment"
            type="com.framgia.fpoll.ui.pollmanage.information.PollInformationFragment"/>

        <variable
            name="information"
            type="com.framgia.fpoll.data.model.DataInfoItem"/>

        <variable
            name="handler"
            type="com.framgia.fpoll.ui.pollmanage.information.PollInformationHandler"/>

        <import type="com.framgia.fpoll.util.TimeUtil"/>
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dp_16"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatButton
                    style="@style/ButtonInfo"
                    android:onClick="@{()->handler.clickLinkVote()}"
                    android:text="@string/title_link_vote"/>

                <android.support.v7.widget.AppCompatButton
                    style="@style/ButtonInfo"
                    android:onClick="@{()->handler.clickViewOption()}"
                    android:text="@string/title_view_option"/>

                <android.support.v7.widget.AppCompatButton
                    style="@style/ButtonInfo"
                    android:onClick="@{()->handler.clickViewSetting()}"
                    android:text="@string/title_view_setting"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:padding="@dimen/dp_4"
                android:text="@{information.poll.isOpen ? @string/title_poll_open : @string/title_poll_close}"
                android:textColor="@color/color_blued"/>

            <LinearLayout
                style="@style/RegisterLayoutStyle"
                android:padding="@dimen/dp_1">

                <ImageView
                    style="@style/RegisterImageViewStyle"
                    android:src="@drawable/ic_person_black_24dp"/>

                <EditText
                    android:id="@+id/edt_user_name"
                    style="@style/RegisterEditTextStyle"
                    android:hint="@string/title_username"
                    android:text="@={information.poll.name}"
                    bind:setErrorEditText="@{msgError}"/>
            </LinearLayout>

            <LinearLayout
                style="@style/RegisterLayoutStyle">

                <ImageView
                    style="@style/RegisterImageViewStyle"
                    android:layout_margin="@dimen/dp_1"
                    android:background="@color/color_gray"
                    android:padding="@dimen/dp_10"
                    android:src="@drawable/ic_email_white_24px"/>

                <EditText
                    android:id="@+id/edt_email"
                    style="@style/RegisterEditTextStyle"
                    android:hint="@string/title_email"
                    android:inputType="textEmailAddress"
                    android:text="@={information.poll.email}"
                    bind:setErrorEditText="@{msgError}"
                    bind:setErrorEmail="@{msgErrorEmail}"/>

            </LinearLayout>

            <LinearLayout
                style="@style/RegisterLayoutStyle">

                <ImageView
                    style="@style/RegisterImageViewStyle"
                    android:layout_margin="@dimen/dp_1"
                    android:background="@color/color_gray"
                    android:padding="@dimen/dp_10"
                    android:src="@drawable/ic_title"/>

                <EditText
                    android:id="@+id/edt_poll_title"
                    style="@style/RegisterEditTextStyle"
                    android:hint="@string/hint_poll_title"
                    android:inputType="textEmailAddress"
                    android:text="@={information.poll.title}"
                    bind:setErrorEditText="@{msgError}"/>

            </LinearLayout>

            <Spinner
                style="@style/RegisterLayoutStyle"
                android:entries="@array/num_answer"
                bind:numAnswer="@{information.poll.multiple}"/>

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/edit_send_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_8"
                android:background="@drawable/bg_edit_text"
                android:gravity="start"
                android:hint="@string/title_description_poll"
                android:minHeight="@dimen/dp_180"
                android:padding="@dimen/dp_8"
                android:text="@={information.poll.description}"/>

            <LinearLayout
                android:id="@+id/btn_choose_time"
                style="@style/RegisterLayoutStyle"
                android:onClick="@{() -> handler. showDatePicker()}">

                <ImageView
                    style="@style/RegisterImageViewStyle"
                    android:layout_margin="@dimen/dp_1"
                    android:background="@color/color_gray"
                    android:padding="@dimen/dp_10"
                    android:src="@drawable/ic_alarm_black_24px"/>

                <TextView
                    android:id="@+id/edt_choose_time"
                    style="@style/RegisterEditTextStyle"
                    android:gravity="center_vertical"
                    android:text="@{TimeUtil.convertTimeToString(fragment.mTime)}"/>

            </LinearLayout>

            <LinearLayout
                style="@style/RegisterLayoutStyle">

                <ImageView
                    style="@style/RegisterImageViewStyle"
                    android:layout_margin="@dimen/dp_1"
                    android:background="@color/color_gray"
                    android:padding="@dimen/dp_10"
                    android:src="@drawable/ic_location_on_black_24px"/>

                <EditText
                    style="@style/RegisterEditTextStyle"
                    android:hint="@string/hint_position"
                    android:inputType="textEmailAddress"
                    android:text="@={information.poll.location}"/>

            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_20"
                android:background="@color/color_teal_500"
                android:onClick="@{() -> handler. saveData()}"
                android:text="@string/title_save_data"
                android:textAllCaps="false"
                android:textColor="@color/color_white"
                android:textSize="@dimen/sp_17"/>
        </LinearLayout>
    </ScrollView>
</layout>
